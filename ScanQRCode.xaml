<Window x:Class="LiveBot.ScanQRCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiveBot"
        x:Name="window"
        mc:Ignorable="d"
        Title="登录" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Image x:Name="QrCode" Height="280" Width="280" Margin="0,0,0,0" VerticalAlignment="Center" />
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,0,0,1" Text="请使用Bilibili手机客户端扫码登录" TextWrapping="Wrap" Height="15" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
